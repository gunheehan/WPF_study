<Page
    x:Class="WPF_study.Views.Pages.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_study.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:WPF_study.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:DataPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="750"
    d:DesignWidth="850"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ui:TextBlock Grid.Row="0" x:Name="tbkAdminAgency" Margin="0,0,0,10">
                <Run Text="Adminstrative Agency" FontWeight="Bold" />
                <Run Text="*" Foreground="OrangeRed"/>
            </ui:TextBlock>
            <ComboBox Grid.Row="1" x:Name="cbxAdminAgency" 
                      SelectedItem="{Binding ViewModel.SelectedAdministrativeAgency, Mode=TwoWay}"
                      SelectionChanged="cbxAdminAgency_SelectionChanged"
                      ItemsSource="{Binding ViewModel.AdministrativeAgency, Mode=TwoWay}" Margin="0,0,0,10"/>

            <ui:TextBlock Grid.Row="2" x:Name="tbktotalPopulation" Margin="0,0,0,10">
                <Run Text="Totla Population" FontWeight="Bold" />
                <Run Text="*" Foreground="OrangeRed"/>
            </ui:TextBlock>
            <ui:TextBox Grid.Row="3" x:Name="tbxtotalPopulation" Margin="0,0,0,10"/>

            <ui:TextBlock Grid.Row="4" x:Name="tbkMalePopulation" Margin="0,0,0,10">
                <Run Text="Male Population" FontWeight="Bold" />
                <Run Text="*" Foreground="OrangeRed"/>
            </ui:TextBlock>
            <ui:TextBox Grid.Row="5" x:Name="tbxMalePopulation" Margin="0,0,0,10"/>

            <ui:TextBlock Grid.Row="6" x:Name="tbkFemalePopulation" Margin="0,0,0,10">
                <Run Text="Female Population" FontWeight="Bold" />
                <Run Text="*" Foreground="OrangeRed"/>
            </ui:TextBlock>
            <ui:TextBox Grid.Row="7" x:Name="tbxFemalePopulation" Margin="0,0,0,10"/>

            <ui:TextBlock Grid.Row="8" x:Name="tbkSexRatio" Margin="0,0,0,10">
                <Run Text="Sex Ratio" FontWeight="Bold" />
                <Run Text="*" Foreground="OrangeRed"/>
            </ui:TextBlock>
            <ui:TextBox Grid.Row="9" Margin="0,0,0,10"/>

            <ui:TextBlock Grid.Row="10" x:Name="tbkNumnerOfHouseholds" Margin="0,0,0,10">
                <Run Text="Number Of Households" FontWeight="Bold" />
                <Run Text="*" Foreground="OrangeRed"/>
            </ui:TextBlock>
            <ui:TextBox Grid.Row="11" Margin="0,0,0,10"/>

            <ui:TextBlock Grid.Row="10" x:Name="tbkNumverOfPeoplePerHouseHolds" Margin="0,0,0,10">
                <Run Text="Number Of People Per Households" FontWeight="Bold" />
                <Run Text="*" Foreground="OrangeRed"/>
            </ui:TextBlock>
            <ui:TextBox Grid.Row="11" Margin="0,0,0,10"/>

            <ui:Button Grid.Row="14" Height="50" Width="300" Background="SteelBlue"
                       Command="{Binding ViewModel.SelectedAdministrativeAgency, Mode=OneWay}"
                       Content="Create" Foreground="White" Margin="0,0,0,10"/>

            <Grid Grid.Row="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:Button Grid.Column="0" Height="50" Width="145" Background="SteelBlue"
                           Content="Read All" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ui:Button Grid.Column="1" Height="50" Width="145" HorizontalAlignment="Center" Background="SteelBlue"
                           Content="Read All" Foreground="White" Margin="0,0,0,10"/>
            </Grid>

            <ui:Button Grid.Row="16" Height="50" Width="300" Background="Bisque"
                       Content="Update" Foreground="Black" Margin="0,0,0,10"/>

            <ui:Button Grid.Row="17" Height="50" Width="300" Background="IndianRed"
                       Content="Delete" Foreground="White" Margin="0,0,0,10"/>
        </Grid>
        <Grid Grid.Column="1">
            <DataGrid x:Name="dgGangnamguPopulation" ItemsSource="{Binding ViewModel.GangnamguPopulations, Mode=OneWay}">
                
            </DataGrid>
        </Grid>
    </Grid>
</Page>
